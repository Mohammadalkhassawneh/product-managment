<div class="container">
  <% if @error_message %>
    <p><%= @error_message %></p>
  <% else %>
    <h1>Product Details</h1>
    <% products_data.each do |product| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= product['productName'] %></h5>
          <p class="card-text">Product ID: <%= product['productId'] %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
